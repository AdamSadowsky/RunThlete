<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF6F00"
                android:endColor="#FF8F00"
                android:type="linear" />
        </shape>
    </item>

    <!-- Optional Overlay for Blur Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Semi-transparent black overlay -->
        </shape>
    </item>

</layer-list>