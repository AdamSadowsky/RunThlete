<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="12dp"
    android:layout_margin = "16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bkg"
            android:padding="12dp">

            <TextView
                android:id="@+id/runName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/runName"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/runDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                style="@style/cardStyle"/>

            <TextView
                android:id="@+id/runDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/runName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="end"
                style="@style/cardStyle"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                style="@style/cardStyle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toTopOf="@+id/time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/runName" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/timeCard"
                app:layout_constraintEnd_toStartOf="@+id/distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mapView"
                app:layout_constraintHorizontal_weight="1"
                android:gravity="center"
                style="@style/cardStyle"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/distanceCard"
                app:layout_constraintEnd_toStartOf="@id/avgPace"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/time"
                app:layout_constraintTop_toBottomOf="@id/mapView"
                android:gravity="center"
                style="@style/cardStyle"/>

            <TextView
                android:id="@+id/avgPace"
                style="@style/cardStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/avgPaceCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/distance"
                app:layout_constraintTop_toBottomOf="@id/mapView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>